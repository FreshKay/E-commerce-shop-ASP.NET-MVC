@using PagedList
@using PagedList.Mvc
@model IPagedList<ShopSite.Models.Item>
@using ShopSite.Infrastructure
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="CategoryList" class="container">
    <div class="product">
        <h2 class="new">Category</h2>
        <div class="pink">
            @foreach (var items in Model)
            {
                <div class="col-md-3 box-in-at">
                    <div class=" grid_box portfolio-wrapper">
                        <a href="@Url.Action( "Details", "Items", new { id = items.ItemId })"> <img src="@Url.PicturePath(items.ItemPicture)" class="img-responsive" alt=""></a>
                    </div>
                    <div class="grid_1 simpleCart_shelfItem">
                        <a href="@Url.Action( "Details", "Items", new { id = items.ItemId })" class="cup"><span class=" item_price">@items.ItemName&emsp;$@items.ItemPrice <i> </i> </span></a>@*cup item_add*@
                    </div>
                </div>
            }
            <div class="clearfix"> </div>
        </div>
    </div>
    @Html.PagedListPager(Model, page => Url.Action("SearchList", new { page, searchQuery = Request.QueryString["searchQuery"] }))
</div>
